<div>
    <h2>
        Nazari's Drama Reviews
    </h2>
</div>

<div>
    <h3>
        Reviews
    </h3>
</div>
<div class = "row-cols-md-1">
    <%for (oldreview of oldreviews) {
        if (oldreview.review !== "") {%>
            <div class="col mb-4">
            <div class="card">
                <div class="card-header"><%= oldreview.name %></div>
                <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">Overall Rating: <%=oldreview.rating%></h6>
                <%if (oldreview.romanceandchemistry !== null) {%>
                <h6 class="card-subtitle mb-2 text-muted">Romance and Chemistry Rating: <%=oldreview.romanceandchemistry%></h6>
                <%}%>
                <%if (oldreview.storyandplot !== null) {%>
                <h6 class="card-subtitle mb-2 text-muted">Story and Plot Rating: <%=oldreview.storyandplot%></h6>
                <%}%>
                <%if (oldreview.pathosandproduction !== null) {%>
                <h6 class="card-subtitle mb-2 text-muted">Pathos and Production Rating: <%=oldreview.pathosandproduction%></h6>
                <%}%>
                <ul class="list-group list-group-flush">
                    <%if (oldreview.datestarted !== null) {%>
                        <li class="list-group-item">Date Started: <%=oldreview.datestarted%></li>                            <%}%>
                    <%if (oldreview.datecompleted !== null) {%>
                        <li class="list-group-item">Date Completed: <%=oldreview.datecompleted%></li>
                        <%}%>
                </ul>
                    <p class="card-text"><%=oldreview.review%></p>
                </div>
            </div>
            </div>
        <% }}%>
</div>

<div> 
    <br>
    <h3>
        Ratings
    </h3>
</div>

<div class="d-flex flex-wrap overflow-scroll">
    <%for (oldreview of oldreviews) {
        if (oldreview.romanceandchemistry === null && oldreview.storyandplot === null && oldreview.pathosandproduction === null && oldreview.review === ""){%>
        <!-- <div class="col-md-4"> -->
        <div class="card p-3 m-3 border border-3" style = "min-width: 18rem; max-width: 18rem;">
        <div class="card-header"><%= oldreview.name %></div>
        <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">Overall Rating: <%=oldreview.rating%></h6>
        <ul class="list-group list-group-flush">
            <%if (oldreview.datestarted !== "") {%>
                <li class="list-group-item">Date Started: <%=oldreview.datestarted%></li>
                                            <%}%>
            <%if (oldreview.datecompleted !== "") {%>
                <li class="list-group-item">Date Completed: <%=oldreview.datecompleted%></li>
                <%}%>
        </ul>
        <!-- <p class="card-text"><%=oldreview.review%></p> -->
        </div>
        </div>                
<% }%>
<%}%>
</div>